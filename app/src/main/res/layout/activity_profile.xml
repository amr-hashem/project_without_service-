<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/rel"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageVprofile"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/islam"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Name:"
                    android:id="@+id/tvname"
                    android:layout_above="@+id/tvgender2"
                    android:layout_toLeftOf="@+id/tvgender2"
                    android:layout_toStartOf="@+id/tvgender2" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Amr Hashem"
                    android:id="@+id/tvname2"
                    android:layout_alignBaseline="@+id/tvname"
                    android:layout_alignBottom="@+id/tvname"
                    android:layout_alignRight="@+id/imgemail"
                    android:layout_alignEnd="@+id/imgemail" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="Gender:"
                    android:id="@+id/tvgender"
                    android:layout_below="@+id/tvname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="168dp"
                    android:layout_height="30dp"
                    android:text="New Text"
                    android:id="@+id/tvgender2"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/tvname2"
                    android:layout_alignStart="@+id/tvname2"
                    android:layout_marginLeft="40dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Job:"
                    android:id="@+id/tvjob"
                    android:layout_above="@+id/tvgender2"
                    android:layout_toLeftOf="@+id/tvgender2"
                    android:layout_toStartOf="@+id/tvgender2" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="SWE"
                    android:id="@+id/tvjob2"
                    android:layout_alignBaseline="@+id/tvname"
                    android:layout_alignBottom="@+id/tvname"
                    android:layout_alignRight="@+id/imgemail"
                    android:layout_alignEnd="@+id/imgemail" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="place:"
                    android:id="@+id/tvplace"
                    android:layout_above="@+id/tvgender2"
                    android:layout_toLeftOf="@+id/tvgender2"
                    android:layout_toStartOf="@+id/tvgender2" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="ismailia-elkhamsa"
                    android:id="@+id/tvplace2"
                    android:layout_alignBaseline="@+id/tvname"
                    android:layout_alignBottom="@+id/tvname"
                    android:layout_alignRight="@+id/imgemail"
                    android:layout_alignEnd="@+id/imgemail" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="age:"
                    android:id="@+id/tvage"
                    android:layout_above="@+id/tvgender2"
                    android:layout_toLeftOf="@+id/tvgender2"
                    android:layout_toStartOf="@+id/tvgender2" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="21"
                    android:id="@+id/tvage2"
                    android:layout_alignBaseline="@+id/tvname"
                    android:layout_alignBottom="@+id/tvname"
                    android:layout_alignRight="@+id/imgemail"
                    android:layout_alignEnd="@+id/imgemail" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgphone"
                    android:background="@drawable/phone"
                    android:layout_below="@+id/tvgender"
                    android:layout_alignRight="@+id/buttonRate"
                    android:layout_alignEnd="@+id/buttonRate"
                    android:layout_marginLeft="20dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgfacebook"
                    android:background="@drawable/facebook"
                    android:layout_above="@+id/ratingBar"
                    android:layout_toRightOf="@+id/etset"
                    android:layout_toEndOf="@+id/etset"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgemail"
                    android:background="@drawable/e_mail1"
                    android:layout_alignTop="@+id/imgfacebook"
                    android:layout_toRightOf="@+id/ratingBar"
                    android:layout_toEndOf="@+id/ratingBar"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:stepSize=".5"
                    android:isIndicator="true"
                    android:layout_below="@+id/imgphone"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>